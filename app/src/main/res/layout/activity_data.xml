<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.DataActivity"
    tools:ignore="ResourceName,MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="用户名称：" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            app:layout_constraintBottom_toBottomOf="@+id/name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/age_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="用户名称："
            app:layout_constraintTop_toBottomOf="@+id/name_tv" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/age_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="请输入年纪"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/age_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/age_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="性  别  ："
            app:layout_constraintTop_toBottomOf="@+id/age_tv" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/sex_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="请输入性别"
            app:layout_constraintBottom_toBottomOf="@+id/sex_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sex_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/save_tx"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="保存"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sex_tv" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/all_tx"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="查询所有用户"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/save_tx" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/all_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:minHeight="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/all_tx" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>